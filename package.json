    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^1.1.1",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "webpack": "^4.32.2",
